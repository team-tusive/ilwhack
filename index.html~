<!DOCTYPE html>
<html>
<head>
	<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
	<script type="text/javascript" src="http://www.heatmaptool.com/js/heatmap.js"></script>
	<script type="text/javascript">

		function initialize() {

			// Creates and inserts Google Map

			var mapOptions = {
				zoom: 4,
				center: new google.maps.LatLng(38, -97),
				mapTypeId: google.maps.MapTypeId.SATELLITE
			};

			var map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);

			// Constructs a heat map overlay

			var heatMap = new HeatMap({
				key: 'fc53bd0fe8f2aae0cab19974ba755713',
				data: 'http://www.heatmaptool.com/data/mcdonalds.csv',
				gradient: 'fire',
				scale_dimming: 0.5,
				radius: 5
			});

			// Adds heat map to Google Map

			heatMap.addTo(map);

		}

	</script>
</head>
<body onload="initialize();">
	<div id="map_canvas" style="position: absolute; top: 0; right: 0; bottom: 0; left: 0;"></div>
</body>
</html>
